# Contributor: Olivier Mauras <olivier@mauras.ch>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=salt
pkgver=2016.9
pkgrel=0
pkgdesc="A parallel remote execution system"
url="https://github.com/saltstack/salt"
arch="noarch"
license="ASL 2.0"
depends="py-tornado py2-markupsafe py2-futures" 
depends_dev=""
makedepends="$depends_dev python2-dev py-zmq
    py2-crypto py2-psutil py-jinja2 py-yaml py-msgpack"
install=""
subpackages="$pkgname-doc $pkgname-master $pkgname-minion $pkgname-syndic
    $pkgname-api $pkgname-cloud $pkgname-ssh"
source="$pkgname-$pkgver.tar.gz::https://codeload.github.com/saltstack/$pkgname/tar.gz/v$pkgver
        salt-api.confd
        salt-api.initd
        salt-master.confd
        salt-master.initd
        salt-minion.confd
        salt-minion.initd
        salt-syndic.confd
        salt-syndic.initd"

builddir="$srcdir"/$pkgname-$pkgver

build() {
    cd "$builddir"
    python2 setup.py build || return 1
}

package() {
    cd "$builddir"
    python2 setup.py install --root=$pkgdir/ --optimize=1 || return 1
    mkdir -p ${pkgdir}/var/log/$pkgname
}

init_copy() {
    type="$1"
    mkdir -p ${subpkgdir}/etc/rc.d/
    mkdir -p ${subpkgdir}/etc/conf.d/

    cp ${srcdir}/salt-$type.initd ${subpkgdir}/etc/rc.d/salt-$type
    cp ${srcdir}/salt-$type.confd ${subpkgdir}/etc/conf.d/salt-$type

    chmod +x ${subpkgdir}/etc/rc.d/salt-$type
}

conf_copy() {
    type="$1"
    mkdir -p ${subpkgdir}/etc/salt/
    cp -rf ${srcdir}/${pkgname}-${pkgver}/conf/${type}* ${subpkgdir}/etc/salt/
}

master() {
    pkgdesc="Management component for salt, a parallel remote execution system"
    depends="$pkgname"

    init_copy master
    conf_copy master

    mkdir -p ${subpkgdir}/usr/bin
    mv ${pkgdir}/usr/bin/salt ${subpkgdir}/usr/bin
    for i in cp key master run unity
    do
        mv ${pkgdir}/usr/bin/salt-$i ${subpkgdir}/usr/bin
    done
}

minion() {
    pkgdesc="Client component for Salt, a parallel remote execution system"
    depends="$pkgname"

    init_copy minion
    conf_copy minion
    conf_copy proxy

    mkdir -p ${subpkgdir}/usr/bin
    for i in call minion proxy
    do
        mv ${pkgdir}/usr/bin/salt-$i ${subpkgdir}/usr/bin
    done
}

syndic() {
    pkgdesc="Master-of-master component for Salt, a parallel remote execution system"
    depends="$pkgname-master"

    mkdir -p ${subpkgdir}/usr/bin
    mv ${pkgdir}/usr/bin/salt-syndic ${subpkgdir}/usr/bin
}

api() {
    pkgdesc="REST API for Salt, a parallel remote execution system"
    depends="$pkgname-master"

    init_copy api
    conf_copy api

    mkdir -p ${subpkgdir}/usr/bin
    mv ${pkgdir}/usr/bin/salt-api ${subpkgdir}/usr/bin
}

cloud() {
    pkgdesc="Cloud provisioner for Salt, a parallel remote execution system"
    depends="$pkgname-master"

    conf_copy cloud

    mkdir -p ${subpkgdir}/usr/bin
    mv ${pkgdir}/usr/bin/salt-cloud ${subpkgdir}/usr/bin
}

ssh() {
    pkgdesc="Agentless SSH-based version of Salt, a parallel remote execution system"
    depends="$pkgname"

    conf_copy roster

    mkdir -p ${subpkgdir}/usr/bin
    mv ${pkgdir}/usr/bin/salt-ssh ${subpkgdir}/usr/bin
}

